                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:orientation="vertical"
                    android:paddingRight="5dp"
                    >
                    <TextView
                        android:id="@+id/active_security_fingerprint_item_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
